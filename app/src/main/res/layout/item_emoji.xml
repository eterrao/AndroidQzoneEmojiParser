<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_stroke">

    <ImageView
        android:id="@+id/iv_emoji"
        android:layout_width="30dp"

        android:layout_height="30dp"
        android:layout_centerHorizontal="true" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_emoji_drawee_view"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        fresco:placeholderImage="@color/colorAccent"
        fresco:placeholderImageScaleType="fitCenter" />

    <TextView
        android:id="@+id/tv_emoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_emoji"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_emoji1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_emoji"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_emoji2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_emoji1"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_emoji_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_emoji2"
        android:layout_centerHorizontal="true"
        android:textSize="5sp" />
</RelativeLayout>